  <table class="table">
    <thead>
      <tr>
        <th>Prénom</th>
        <th>Nom</th>
        <th>Téléphone</th>
        <th>Groupe sanguin</th>
        <th>Ville</th>
        <th>Hopital</th>
  
      </tr>
    </thead>
    <tbody>

     {{#each contents }}

              <tr>
        <td>{{firstName}}</td>
        <td>{{lastName}}</td>
